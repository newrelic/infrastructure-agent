  </Fragment>

  <Fragment>
    <ComponentGroup Id="LoggingToolCfgComponents" Directory="LoggingToolCfg">
        <Component Id="CMP_LOGGING_EXAMPLE_CFG_FILE" Guid="B347F18E-6406-412C-B676-B3328F285080" Win64="no">
          <File Id="FILE_LOGGING_EXAMPLE_CFG_FILE"
